{
	"compilerOptions": {
		"outDir": "./build",
		"allowJs": true,
		"target": "es2020",
		"moduleResolution": "node",
		"sourceMap": true,
		"module": "es2020",
		"removeComments": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"alwaysStrict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"ts-node": { "files": true }
}